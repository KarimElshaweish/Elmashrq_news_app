<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout

        android:background="@color/pdlg_color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:background="@drawable/profile_top_bar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:fontFamily="@font/jf_flat_medium"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_ion"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="1dp"
                    android:layout_width="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:layout_height="150dp">
                   <com.makeramen.roundedimageview.RoundedImageView
                       android:layout_width="120dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_height="120dp"
                       android:scaleType="fitXY"
                       app:riv_corner_radius="15dip"
                       app:riv_corner_radius_bottom_left="5dp"
                       app:riv_corner_radius_top_left="5dp"
                       app:riv_corner_radius_bottom_right="5dp"
                       app:riv_corner_radius_top_right="5dp"
                       android:id="@+id/profileImage"
                       android:src="@drawable/joey"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/changeImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/cam"
                        app:backgroundTint="@android:color/white" />
                </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:fontFamily="@font/jf_flat_medium"
            android:gravity="center"
            android:text="إبراهيم شمس"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="20dp"
                android:fontFamily="@font/jf_flat_medium"
                android:text="@string/app_userName"
                android:textColor="#303030"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15sp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_box"
                android:fontFamily="@font/jf_flat_medium"
                android:gravity="center"
                android:hint="@string/app_userName"
                android:paddingEnd="10dp"
                android:textColorHint="#989898"
                android:textSize="12sp" />



            <Button

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/changepassword"
                android:fontFamily="@font/jf_flat_medium"
                android:padding="7dp"
                android:text="@string/changePassword"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <Button

                android:id="@+id/saveChange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/login"
                android:fontFamily="@font/jf_flat_medium"
                android:padding="7dp"
                android:text="@string/save_change"
                android:textColor="@color/pdlg_color_white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</layout>
