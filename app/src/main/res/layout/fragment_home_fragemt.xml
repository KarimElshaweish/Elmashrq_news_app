<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragments.HomeFragemt">

<LinearLayout



    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginEnd="10sp"
        android:fontFamily="@font/jf_flat_medium"
        android:textSize="14sp"

        android:text="مرشح لك"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:src="@drawable/vid1"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/addNews"
            android:src="@drawable/vd2"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/citesRV"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/news_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>


</LinearLayout>
</layout>