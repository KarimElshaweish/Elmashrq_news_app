<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/bg_login"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/logo_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="110dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                bind:cardCornerRadius="@dimen/pdlg_space_1.0x"
                android:layout_marginTop="30dp"
                android:elevation="5dp"
                bind:cardElevation="5dp"
                bind:cardMaxElevation="5dp"
                bind:cardUseCompatPadding="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:layout_marginTop="15dp"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="right"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/login"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            android:drawablePadding="10dp"

                            android:fontFamily="@font/jf_flat_medium"

                            android:text="@string/changePassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_alignParentStart="true"
                            android:layout_gravity="end"
                            android:id="@+id/backButton"
                            android:src="@drawable/back_ion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <ScrollView

                        android:layout_marginTop="20dp"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginEnd="20dp"
                                android:text="@string/new_password"

                                android:fontFamily="@font/jf_flat_medium"
                                android:textSize="14sp"
                                android:textColor="#303030"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/new_password"
                                android:fontFamily="@font/jf_flat_medium"
                                android:layout_marginTop="15sp"
                                android:hint="@string/new_password"
                                android:textSize="12sp"
                                android:textColorHint="#989898"
                                android:paddingEnd="10dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/edit_box"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/><TextView
                                android:layout_marginEnd="20dp"
                                android:text="@string/new_password"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/jf_flat_medium"
                                android:textSize="14sp"
                                android:textColor="#303030"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <EditText
                                android:id="@+id/confirm_new_password"
                                android:fontFamily="@font/jf_flat_medium"
                                android:layout_marginTop="15sp"
                                android:hint="@string/new_password"
                                android:textSize="12sp"
                                android:textColorHint="#989898"
                                android:paddingEnd="10dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/edit_box"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>




                            <Button
                                android:layout_marginTop="20dp"
                                android:onClick="confirmOnclick"
                                android:id="@+id/confim_new_password_button"
                                android:background="@drawable/login"
                                android:text="@string/confirm"
                                android:layout_gravity="center"
                                android:textColor="@color/pdlg_color_white"
                                android:textSize="14sp"
                                android:fontFamily="@font/jf_flat_medium"
                                android:layout_marginBottom="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <com.github.ybq.android.spinkit.SpinKitView
            android:visibility="gone"
            android:layout_centerInParent="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:SpinKit_Color="@color/colorAccent" />
    </RelativeLayout>
</layout>