<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="#F7F8FA"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="2dp"
                android:id="@+id/login"
                android:text="تسجيل الدخول"
                android:textSize="14sp"
                android:fontFamily="@font/jf_flat_medium"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:background="@drawable/signup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/register"
                android:text=" حساب جديد"
                android:textSize="14sp"
                android:fontFamily="@font/jf_flat_medium"
                android:textColor="#fff"
                android:background="@drawable/login"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/avatar"
                android:layout_centerVertical="true"
                android:src="@drawable/namepalceholder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center|right"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/username"
                android:fontFamily="@font/jf_flat_medium"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_gravity="end"
                android:layout_marginStart="10sp"
                android:drawableStart="@drawable/favourits"
                android:layout_marginEnd="10sp"
                android:drawablePadding="@dimen/pdlg_space_1.0x"
                android:textAlignment="center"
                android:gravity="center"
                android:text="المفضلة"
                android:textColor="#303030"
                android:textSize="14sp"
                android:fontFamily="@font/jf_flat_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="@dimen/pdlg_space_1.0x"
            android:src="@drawable/line"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_gravity="start"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:drawablePadding="@dimen/pdlg_space_1.0x"
            android:textAlignment="center"
            android:gravity="center"
            android:text="الإعدادات"
            android:textColor="#303030"
            android:textSize="14sp"
            android:fontFamily="@font/jf_flat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:layout_marginStart="10sp"
            android:drawableStart="@drawable/setting"
            android:layout_marginEnd="10sp"
            android:drawablePadding="@dimen/pdlg_space_1.0x"
            android:textAlignment="center"
            android:gravity="center"
            android:text="تعديل المصادر"
            android:textColor="#303030"
            android:textSize="14sp"
            android:fontFamily="@font/jf_flat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="@dimen/pdlg_space_1.0x"
            android:src="@drawable/line"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_gravity="start"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:drawablePadding="@dimen/pdlg_space_1.0x"
            android:textAlignment="center"
            android:gravity="center"
            android:text="التنبيهات"
            android:textColor="#303030"
            android:textSize="14sp"
            android:fontFamily="@font/jf_flat_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:layout_marginStart="10sp"
                android:drawableStart="@drawable/notificationing"
                android:layout_marginEnd="10sp"
                android:drawablePadding="@dimen/pdlg_space_1.0x"
                android:textAlignment="center"
                android:gravity="center"
                android:text="تنبيهات الأخبار العاجلة"
                android:textColor="#303030"
                android:textSize="14sp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/jf_flat_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/toogle_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </RelativeLayout>
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="@dimen/pdlg_space_1.0x"
            android:src="@drawable/line"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"
                    android:drawablePadding="@dimen/pdlg_space_1.0x"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="تطبيق المشرق"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/jf_flat_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:layout_marginTop="20dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10sp"
                    android:drawableStart="@drawable/call"
                    android:layout_marginEnd="10sp"
                    android:drawablePadding="@dimen/pdlg_space_1.0x"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="الإتصال بنا"
                    android:id="@+id/call"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/jf_flat_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/share"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10sp"
                    android:drawableStart="@drawable/share_profile"
                    android:layout_marginEnd="10sp"
                    android:drawablePadding="@dimen/pdlg_space_1.0x"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="انشر تطبيق المشرق"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/jf_flat_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/rate"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10sp"
                    android:drawableStart="@drawable/rating"
                    android:layout_marginEnd="10sp"
                    android:drawablePadding="@dimen/pdlg_space_1.0x"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="قيم تطبيق المشرق"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/jf_flat_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10sp"
                    android:drawableStart="@drawable/suggest_res"
                    android:layout_marginEnd="10sp"
                    android:drawablePadding="@dimen/pdlg_space_1.0x"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="اقترح إضافة مصدر"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/jf_flat_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10sp"
                    android:drawableStart="@drawable/common"
                    android:layout_marginEnd="10sp"
                    android:drawablePadding="@dimen/pdlg_space_1.0x"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="الأسئلة الشائعة"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/jf_flat_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/policy"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10sp"
                    android:drawableStart="@drawable/privay"
                    android:layout_marginEnd="10sp"
                    android:drawablePadding="@dimen/pdlg_space_1.0x"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="سياسة الخصوصية"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/jf_flat_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/condattion"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="10sp"
                    android:drawableStart="@drawable/call"
                    android:layout_marginEnd="10sp"
                    android:drawablePadding="@dimen/pdlg_space_1.0x"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="شروط االإستخدام"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/jf_flat_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
    </LinearLayout>
    </ScrollView>
</layout>