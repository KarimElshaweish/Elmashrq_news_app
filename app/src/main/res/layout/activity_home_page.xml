<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<FrameLayout
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".view.actvivties.HomePage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textHome"
                    android:layout_marginEnd="15sp"
                    android:layout_marginTop="20dp"

                    android:textSize="20sp"
                    android:fontFamily="@font/jf_flat_medium"
                    android:textColor="#303030"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:text="@string/ltest_news"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/liveStream"
                        android:src="@drawable/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginStart="15sp"
                        android:layout_marginEnd="15sp"
                        android:src="@drawable/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:visibility="gone"
                        android:src="@drawable/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/textHome"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/more_news"
                            android:padding="@dimen/pdlg_space_1.0x"
                            android:textSize="16sp"
                            android:fontFamily="@font/jf_flat_medium"
                            android:textAlignment="center"
                            android:textColor="@color/color_not_activ"
                            android:drawablePadding="10dp"
                            android:layout_centerVertical="true"
                            android:text="@string/new_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/agel_news"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/pdlg_space_1.0x"
                            android:textSize="16sp"
                            android:fontFamily="@font/jf_flat_medium"
                            android:textAlignment="center"
                            android:textColor="@color/color_not_activ"
                            android:drawablePadding="10dp"
                            android:text="@string/news_agel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/colorAccent"
                            android:id="@+id/last_news"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/pdlg_space_1.0x"
                            android:textSize="16sp"
                            android:fontFamily="@font/jf_flat_medium"
                            android:drawablePadding="10dp"

                            android:text="@string/ltest_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    app:cardMaxElevation="5dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/bottom_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout


                        android:weightSum="5"

                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
                            android:id="@+id/accout_tv"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:drawablePadding="10dp"
                            android:text="حسابى"
                            android:fontFamily="@font/jf_flat_medium"
                            android:textColor="#747474"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/versin_tv"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:drawablePadding="10dp"
                            android:text="إصدارات المشرق"
                            android:fontFamily="@font/jf_flat_medium"
                            android:textColor="#747474"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/sours_tv"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:drawablePadding="10dp"
                            android:text="المصادر"
                            android:fontFamily="@font/jf_flat_medium"
                            android:textColor="#747474"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/reports_tv"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:drawablePadding="10dp"
                            android:text="أهم التقارير"
                            android:fontFamily="@font/jf_flat_medium"
                            android:textColor="#747474"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/news_tv"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:drawablePadding="10dp"
                            android:text="أخر الأخبار"
                            android:fontFamily="@font/jf_flat_medium"
                            android:textColor="#747474"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/container"
                    android:layout_below="@+id/rel"
                    android:layout_marginTop="20dp"
                    android:layout_above="@+id/bottom_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>
</layout>